@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="bt-custom" @onclick="IncrementCount">+1</button>
<button class="bt-custom" @onclick="ResetCount">Reset</button>
<button class="bt-custom" @onclick="DecrementCount">-1</button>



@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void ResetCount()
    {
        currentCount = 0;
    }

    private void DecrementCount()
    {
        currentCount--;
    }

}